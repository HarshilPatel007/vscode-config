{
  // python related settings
  "python.languageServer": "Pylance",
  "python.globalModuleInstallation": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.diagnostics.sourceMapsEnabled": true,
  "python.autoComplete.extraPaths": [
    // "/home/user/.local/lib/python3.9/site-packages/",
    // "/usr/lib/python3.9/"
  ],
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.extraPaths": [],
  "python.analysis.indexing": true,
  "[python]": {
    "editor.wordBasedSuggestions": false,
    "editor.defaultFormatter": "ms-python.python"
  },
  "python.defaultInterpreterPath": "python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintPath": "/usr/bin/pylint",
  "python.linting.pylintArgs": [
    "--disable=C0111", // missing docstring
    "--load-plugins=pylint_django"
  ], // need to install pylint and pylint-django in system. eg. pip install pylint pylint-django
  "python.formatting.autopep8Path": "/usr/bin/autopep8",
  "python.formatting.blackPath": "~/.local/bin/black",
  "python.formatting.provider": "black",

  // editor related settings
  "editor.fontFamily": "'JetBrains Mono', 'monospace', monospace", // need to install 'JetBrains Mono' fonts in system.
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.definitionLinkOpensInPeek": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.hover.delay": 50,
  "editor.mouseWheelZoom": true,
  "editor.quickSuggestions": true,
  "editor.smoothScrolling": true,
  "editor.tabCompletion": "on", // Controls if pressing tab inserts the best suggestion and if tab cycles through other suggestions
  "editor.renderControlCharacters": true,
  "editor.links": true,
  "editor.suggest.preview": true,
  "editor.suggestSelection": "first",
  "editor.suggest.showStatusBar": true,
  "editor.suggest.localityBonus": true,
  "editor.suggest.insertMode": "replace",
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.showDeprecated": false,
  "editor.suggest.showIcons": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true,
  "editor.foldingMaximumRegions": 65000,

  // file related settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.defaultLanguage": "${activeEditorLanguage}",
  "files.exclude": {
    "**/__pycache__": true,
    "**/.vscode": true
  },
  "files.associations": {
    "**/*.html": "html",
    "**/templates/*.html": "django-html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },

  // workbench related settings
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "One Dark Pro Darker",
  "terminal.external.linuxExec": "mate-terminal",

  // git related settings
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",

  // json related settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "json.maxItemsComputed": 500000,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "thunder-client.codeSnippetLanguage": "python-requests",

  // emmet settings
  "emmet.includeLanguages": {
    "django-html": "html",
    "javascript": "javascriptreact"
  },

  // html related settings
  "html.format.enable": false,
  "html.autoClosingTags": true,

  // javascript / typescript related settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.autoClosingTags": true,
  "typescript.autoClosingTags": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.format.insertSpaceAfterConstructor": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
  "javascript.format.placeOpenBraceOnNewLineForFunctions": true,
  "javascript.format.semicolons": "remove",
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true
}
